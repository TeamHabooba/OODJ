<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="group.habooba.ui.gui.StudentResultsPageController"
      spacing="12"
      prefWidth="700"
      prefHeight="600">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>


    <Label text="Student Results"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Separator/>


    <VBox spacing="8">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Student:" minWidth="100" style="-fx-font-weight: bold;"/>
            <Label fx:id="studentNameLabel" text="[Student Name]"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Student UID:" minWidth="100" style="-fx-font-weight: bold;"/>
            <Label fx:id="studentUidLabel" text="[Student UID]"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Course:" minWidth="100" style="-fx-font-weight: bold;"/>
            <Label fx:id="courseNameLabel" text="[Course Name]"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Status:" minWidth="100" style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="[Active/Passed/Failed]"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Current Grade:" minWidth="100" style="-fx-font-weight: bold;"/>
            <Label fx:id="currentGradeLabel" text="0.0" style="-fx-font-size: 14px;"/>
            <Label text="/" />
            <Label fx:id="requiredGradeLabel" text="4.0"/>
        </HBox>
    </VBox>

    <Separator/>


    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Course Components:" style="-fx-font-weight: bold;"/>

        <TableView fx:id="componentsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colComponentName" text="Component Name" prefWidth="200"/>
                <TableColumn fx:id="colComponentType" text="Type" prefWidth="120"/>
                <TableColumn fx:id="colMaxPoints" text="Max Points" prefWidth="100"/>
                <TableColumn fx:id="colEarnedPoints" text="Earned Points" prefWidth="100"/>
                <TableColumn fx:id="colPercentage" text="Percentage (%)" prefWidth="100"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>


        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="btnEdit"
                    text="Edit"
                    prefWidth="80"
                    disable="true"
                    visible="false"
                    onAction="#handleEditButton"/>

            <Button fx:id="btnAdd"
                    text="+"
                    prefWidth="50"
                    visible="false"
                    onAction="#handleAddButton"/>

            <Button fx:id="btnRemove"
                    text="-"
                    prefWidth="50"
                    disable="true"
                    visible="false"
                    onAction="#handleRemoveButton"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnPrintReport"
                    text="Print Report"
                    prefWidth="120"
                    visible="false"
                    onAction="#handlePrintReportButton"/>
        </HBox>
    </VBox>

    <Separator/>


    <VBox fx:id="recoveryMilestonesSection" spacing="10" visible="false" managed="false">
        <Label text="Recovery Milestones:" style="-fx-font-weight: bold;"/>

        <TableView fx:id="recoveryTable" prefHeight="150">
            <columns>
                <TableColumn fx:id="colRecoveryName" text="Milestone Name" prefWidth="200"/>
                <TableColumn fx:id="colRecoveryMaxPoints" text="Max Points" prefWidth="120"/>
                <TableColumn fx:id="colRecoveryEarnedPoints" text="Earned Points" prefWidth="120"/>
                <TableColumn fx:id="colRecoveryStatus" text="Status" prefWidth="100"/>
                <TableColumn fx:id="colRecoveryDate" text="Date" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>


        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="btnAddRecovery"
                    text="+ Add Recovery Milestone"
                    prefWidth="180"
                    visible="false"
                    onAction="#handleAddRecoveryButton"/>
        </HBox>
    </VBox>

    <Separator/>


    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="btnClose"
                text="Close"
                prefWidth="100"
                onAction="#handleCloseButton"/>
        <Button fx:id="btnApply"
                text="Apply"
                prefWidth="100"
                visible="false"
                onAction="#handleApplyButton"/>
    </HBox>

</VBox>