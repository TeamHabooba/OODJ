<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EditProfileController"
            prefWidth="650" prefHeight="420">

    <center>
        <VBox spacing="20" alignment="TOP_LEFT">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <Label text="Edit Profile">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>

            <VBox spacing="12">

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="First Name:" minWidth="120"/>
                    <TextField fx:id="txtFirstName" prefWidth="300"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Last Name:" minWidth="120"/>
                    <TextField fx:id="txtLastName" prefWidth="300"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Email:" minWidth="120"/>
                    <TextField fx:id="txtEmail" prefWidth="300"/>
                </HBox>

            </VBox>

            <HBox spacing="15">
                <Button fx:id="btnSave" text="Save Changes" onAction="#handleSave"/>
                <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
