<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group.habooba.ui.gui.AdminFrameController"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">

            <Tab text="Users">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Label text="Registered Users" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableView fx:id="tableUsers" prefHeight="450">
                        <columns>
                            <TableColumn fx:id="colUID" text="UID" prefWidth="120"/>
                            <TableColumn fx:id="colFirstName" text="First Name" prefWidth="150"/>
                            <TableColumn fx:id="colLastName" text="Last Name" prefWidth="150"/>
                            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                            <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <Button fx:id="btnRefreshUsers" text="Refresh Users" prefWidth="150"/>
                </VBox>
            </Tab>

            <Tab text="Policies">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Label text="System Policies" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableView fx:id="tablePolicies" prefHeight="450">
                        <columns>
                            <TableColumn fx:id="colPolicyID" text="Policy ID" prefWidth="120"/>
                            <TableColumn fx:id="colResource" text="Resource" prefWidth="200"/>
                            <TableColumn fx:id="colAction" text="Action" prefWidth="150"/>
                            <TableColumn fx:id="colEffect" text="Effect" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <Button fx:id="btnRefreshPolicies" text="Refresh Policies" prefWidth="170"/>
                </VBox>
            </Tab>

            <Tab text="Courses">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Label text="Courses Offered" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableView fx:id="tableCourses" prefHeight="450">
                        <columns>
                            <TableColumn fx:id="colCourseCode" text="Course Code" prefWidth="150"/>
                            <TableColumn fx:id="colCourseName" text="Course Name" prefWidth="200"/>
                            <TableColumn fx:id="colSchool" text="School" prefWidth="200"/>
                            <TableColumn fx:id="colYearSem" text="Year/Semester" prefWidth="150"/>
                        </columns>
                    </TableView>

                    <Button fx:id="btnRefreshCourses" text="Refresh Courses" prefWidth="170"/>
                </VBox>
            </Tab>

        </TabPane>
    </center>

</BorderPane>
