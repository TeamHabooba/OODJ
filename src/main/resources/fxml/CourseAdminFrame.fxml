<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="group.habooba.ui.gui.CourseAdminFrameController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Course Administrator Dashboard"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="Students Enrolled"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableStudents" prefHeight="200">
        <columns>
            <TableColumn fx:id="colUID" text="UID" prefWidth="120"/>
            <TableColumn fx:id="colFirstName" text="First Name" prefWidth="150"/>
            <TableColumn fx:id="colLastName" text="Last Name" prefWidth="150"/>
            <TableColumn fx:id="colModule" text="Module" prefWidth="200"/>
        </columns>
    </TableView>

    <Label text="Recovery Plans"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableRecoveryPlans" prefHeight="200">
        <columns>
            <TableColumn fx:id="colTask" text="Task" prefWidth="200"/>
            <TableColumn fx:id="colDeadline" text="Deadline" prefWidth="150"/>
            <TableColumn fx:id="colAssignedTo" text="Student UID" prefWidth="150"/>
        </columns>
    </TableView>

    <Button fx:id="btnRefresh"
            text="Refresh Data"
            prefWidth="150"
            onAction="#handleRefresh"/>

</VBox>
