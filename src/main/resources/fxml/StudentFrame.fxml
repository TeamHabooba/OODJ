<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="group.habooba.ui.gui.StudentFrameController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Student Dashboard"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="Your Enrollments"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableEnrollments" prefHeight="200">
        <columns>
            <TableColumn fx:id="colModuleCode" text="Module Code" prefWidth="150"/>
            <TableColumn fx:id="colModuleName" text="Module Name" prefWidth="250"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
        </columns>
    </TableView>

    <Label text="Recovery Plan"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableRecovery" prefHeight="200">
        <columns>
            <TableColumn fx:id="colTask" text="Task" prefWidth="200"/>
            <TableColumn fx:id="colDeadline" text="Deadline" prefWidth="150"/>
            <TableColumn fx:id="colProgress" text="Progress" prefWidth="150"/>
        </columns>
    </TableView>

    <Button fx:id="btnRefresh"
            text="Refresh Data"
            prefWidth="150"
            onAction="#handleRefresh"/>

</VBox>
